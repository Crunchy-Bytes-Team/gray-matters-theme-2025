<div class="max-w-7xl mx-auto px-6 md:px-0 py-40">
  <div class="grid grid-cols-1 md:grid-cols-[1fr_3fr] gap-8 md:gap-12 relative">
    <!-- Vertical Separator -->
    <div class="hidden md:block absolute left-[calc(25%-12px)] top-0 bottom-0 w-px bg-gray-200"></div>

    <!-- Left Column: Shipping and Billing Addresses -->
    <div class="order-2 md:order-1">
      <!-- SHIPPING ADDRESS -->
      <div class="mb-8">
        <h2 class="text-xl font-bold uppercase tracking-wider mb-4">
          {{ 'customer.order.shipping_address' | t }}
        </h2>
        <div class="text-sm space-y-1">
          {{ order.shipping_address | format_address }}
        </div>
      </div>

      <!-- BILLING ADDRESS -->
      <div class="mb-8">
        <h2 class="text-xl font-bold uppercase tracking-wider mb-4">
          {{ 'customer.order.billing_address' | t }}
        </h2>
        <div class="text-sm space-y-1">
          {{ order.billing_address | format_address }}
        </div>
      </div>
    </div>

    <!-- Right Column: Order Details -->
    <div class="order-1 md:order-2">
      <div>
      <div class="mb-6">
        <h1 class="text-xl font-bold uppercase tracking-wider mb-6">
          {{ 'customer.order.title' | t: name: order.name }}
        </h1>
      </div>

      <!-- Products Table -->
      <div class="overflow-x-auto mb-6">
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-gray-200">
              <th scope="col" class="text-left py-3 pr-4 text-sm font-semibold uppercase tracking-wider">
                PRODUCT
              </th>
              <th scope="col" class="text-left py-3 px-4 text-sm font-semibold uppercase tracking-wider">
                SIZE
              </th>
              <th scope="col" class="text-left py-3 px-4 text-sm font-semibold uppercase tracking-wider">
                QUANTITY
              </th>
              <th scope="col" class="text-right py-3 pl-4 text-sm font-semibold uppercase tracking-wider">
                SUBTOTAL
              </th>
            </tr>
          </thead>
          <tbody>
            {%- for line_item in order.line_items -%}
              <tr class="border-b border-gray-200">
                <td class="py-6 pr-4 text-sm">
                  <div>
                    {%- if line_item.url != blank -%}
                      <a href="{{ line_item.url }}" class="underline hover:no-underline">
                        {{ line_item.title | escape }}
                      </a>
                    {%- else -%}
                      {{ line_item.title | escape }}
                    {%- endif -%}
                  </div>
                </td>
                <td class="py-6 px-4 text-sm">
                  {%- if line_item.variant.title != 'Default Title' -%}
                    {{ line_item.variant.title | escape }}
                  {%- else -%}
                    —
                  {%- endif -%}
                </td>
                <td class="py-6 px-4 text-sm">
                  {{ line_item.quantity }}
                </td>
                <td class="py-6 pl-4 text-sm text-right">
                  {%- if line_item.original_line_price != line_item.final_line_price -%}
                    <s class="text-gray-500">{{ line_item.original_line_price | money | replace: '€', '€ ' }}</s>
                    <span class="ml-2">{{ line_item.final_line_price | money | replace: '€', '€ ' }}</span>
                  {%- else -%}
                    {{ line_item.original_line_price | money | replace: '€', '€ ' }}
                  {%- endif -%}
                </td>
              </tr>
            {%- endfor -%}
          </tbody>
        </table>
      </div>

      <!-- Order Summary -->
      <div>
        <div class="space-y-2 text-sm">
          {%- for shipping_method in order.shipping_methods -%}
            <div class="flex justify-between pb-6">
              <span>Shipping ({{ shipping_method.title | escape }})</span>
              <span>{{ shipping_method.price | money | replace: '€', '€ ' }}</span>
            </div>
          {%- endfor -%}

          {%- for tax_line in order.tax_lines -%}
            <div class="flex justify-between">
              <span>Tax ({{ tax_line.title | escape }} {{ tax_line.rate | times: 100 }}%)</span>
              <span>{{ tax_line.price | money | replace: '€', '€ ' }}</span>
            </div>
          {%- endfor -%}
        </div>
      </div>

      <div class="flex justify-between border-t border-gray-200 font-bold text-lg pt-8">
        <span>Total</span>
        <span>{{ order.total_net_amount | money | replace: '€', '€ ' }}</span>
      </div>

      <!-- Return to Orders Button -->
      <div class="text-right mt-8">
        <a href="{{ routes.account_url }}" class="inline-block bg-black text-white py-3 px-8 uppercase tracking-wider text-sm font-semibold hover:opacity-90 transition-opacity">
          RETURN TO MY ORDERS
        </a>
      </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-order.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
