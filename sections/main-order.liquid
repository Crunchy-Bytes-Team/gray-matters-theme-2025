{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="max-w-7xl mx-auto px-6 md:px-20 section-{{ section.id }}-padding">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
    <!-- Left Column: Shipping and Billing Addresses -->
    <div class="order-2 md:order-1">
      <!-- SHIPPING ADDRESS -->
      <div class="mb-8">
        <h2 class="text-xl font-bold uppercase tracking-wider mb-4">
          {{ 'customer.order.shipping_address' | t }}
        </h2>
        <p class="text-sm mb-3">
          <strong>Fulfillment Status:</strong> {{ order.fulfillment_status_label }}
        </p>
        <div class="text-sm space-y-1">
          {{ order.shipping_address | format_address }}
        </div>
      </div>

      <!-- BILLING ADDRESS -->
      <div class="mb-8">
        <h2 class="text-xl font-bold uppercase tracking-wider mb-4">
          {{ 'customer.order.billing_address' | t }}
        </h2>
        <p class="text-sm mb-3">
          <strong>Payment Status:</strong> {{ order.financial_status_label }}
        </p>
        <div class="text-sm space-y-1">
          {{ order.billing_address | format_address }}
        </div>
      </div>
    </div>

    <!-- Right Column: Order Details -->
    <div class="order-1 md:order-2">
      <div class="mb-6">
        <h1 class="text-2xl md:text-3xl font-bold uppercase tracking-wider mb-2">
          {{ 'customer.order.title' | t: name: order.name }}
        </h1>
        {%- assign order_date = order.created_at | time_tag: format: 'date_at_time' -%}
        <p class="text-sm text-gray-600 mb-2">
          {{ 'customer.order.date_html' | t: date: order_date }}
        </p>
        {%- if order.cancelled -%}
          {%- assign cancelled_at = order.cancelled_at | time_tag: format: 'date_at_time' -%}
          <p class="text-sm text-red-600 mb-2">
            {{ 'customer.order.cancelled_html' | t: date: cancelled_at }}
          </p>
          <p class="text-sm text-gray-600 mb-4">
            {{ 'customer.order.cancelled_reason' | t: reason: order.cancel_reason_label }}
          </p>
        {%- endif -%}
      </div>

      <!-- Products Table -->
      <div class="overflow-x-auto mb-6">
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-gray-200">
              <th scope="col" class="text-left py-3 px-4 text-sm font-semibold uppercase tracking-wider">
                {{ 'customer.order.product' | t }}
              </th>
              <th scope="col" class="text-left py-3 px-4 text-sm font-semibold uppercase tracking-wider">
                {{ 'customer.order.sku' | t }}
              </th>
              <th scope="col" class="text-left py-3 px-4 text-sm font-semibold uppercase tracking-wider">
                {{ 'customer.order.quantity' | t }}
              </th>
              <th scope="col" class="text-left py-3 px-4 text-sm font-semibold uppercase tracking-wider">
                {{ 'customer.order.total' | t }}
              </th>
            </tr>
          </thead>
          <tbody>
            {%- for line_item in order.line_items -%}
              <tr class="border-b border-gray-100">
                <td class="py-3 px-4 text-sm">
                  <div>
                    {%- if line_item.url != blank -%}
                      <a href="{{ line_item.url }}" class="underline hover:no-underline font-semibold">
                        {{ line_item.title | escape }}
                      </a>
                    {%- else -%}
                      <p class="font-semibold">{{ line_item.title | escape }}</p>
                    {%- endif -%}
                    {%- unless line_item.product.has_only_default_variant -%}
                      <p class="text-xs text-gray-600 mt-1">{{ line_item.variant.title | escape }}</p>
                    {%- endunless -%}
                    {%- if line_item.line_level_discount_allocations != blank -%}
                      <ul class="mt-1 text-xs text-gray-600">
                        {%- for discount_allocation in line_item.line_level_discount_allocations -%}
                          <li>
                            {{ discount_allocation.discount_application.title | escape }} (-{{ discount_allocation.amount | money }})
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  </div>
                </td>
                <td class="py-3 px-4 text-sm text-gray-600">
                  {{ line_item.sku }}
                </td>
                <td class="py-3 px-4 text-sm">
                  {{ line_item.quantity }}
                </td>
                <td class="py-3 px-4 text-sm font-semibold">
                  {%- if line_item.original_line_price != line_item.final_line_price -%}
                    <s class="text-gray-500">{{ line_item.original_line_price | money }}</s>
                    <span class="ml-2">{{ line_item.final_line_price | money }}</span>
                  {%- else -%}
                    {{ line_item.original_line_price | money }}
                  {%- endif -%}
                </td>
              </tr>
            {%- endfor -%}
          </tbody>
        </table>
      </div>

      <!-- Order Summary -->
      <div class="border-t border-gray-200 pt-4 mb-6">
        <div class="space-y-2 text-sm">
          <div class="flex justify-between">
            <span>{{ 'customer.order.subtotal' | t }}</span>
            <span>{{ order.line_items_subtotal_price | money }}</span>
          </div>

          {%- if order.cart_level_discount_applications != blank -%}
            {%- for discount_application in order.cart_level_discount_applications -%}
              <div class="flex justify-between text-gray-600">
                <span>{{ 'customer.order.discount' | t }}: {{ discount_application.title | escape }}</span>
                <span>-{{ discount_application.total_allocated_amount | money }}</span>
              </div>
            {%- endfor -%}
          {%- endif -%}

          {%- for shipping_method in order.shipping_methods -%}
            <div class="flex justify-between">
              <span>{{ 'customer.order.shipping' | t }} ({{ shipping_method.title | escape }})</span>
              <span>{{ shipping_method.price | money }}</span>
            </div>
          {%- endfor -%}

          {%- for tax_line in order.tax_lines -%}
            <div class="flex justify-between">
              <span>{{ 'customer.order.tax' | t }} ({{ tax_line.title | escape }} {{ tax_line.rate | times: 100 }}%)</span>
              <span>{{ tax_line.price | money }}</span>
            </div>
          {%- endfor -%}

          {%- if order.total_duties -%}
            <div class="flex justify-between">
              <span>{{ 'customer.order.total_duties' | t }}</span>
              <span>{{ order.total_duties | money }}</span>
            </div>
          {%- endif -%}

          {%- if order.total_refunded_amount > 0 -%}
            <div class="flex justify-between text-red-600">
              <span>{{ 'customer.order.total_refunded' | t }}</span>
              <span>-{{ order.total_refunded_amount | money_with_currency }}</span>
            </div>
          {%- endif -%}

          <div class="flex justify-between pt-4 border-t border-gray-200 font-bold text-lg">
            <span>{{ 'customer.order.total' | t }}</span>
            <span>{{ order.total_net_amount | money_with_currency }}</span>
          </div>
        </div>
      </div>

      <!-- Return to Orders Button -->
      <div class="text-center">
        <a href="{{ routes.account_url }}" class="inline-block bg-black text-white py-3 px-8 uppercase tracking-wider text-sm font-semibold hover:opacity-90 transition-opacity">
          {{ 'customer.account.return' | t | default: 'RETURN TO MY ORDERS' }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-order.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
