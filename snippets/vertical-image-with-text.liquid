<div class='flex flex-col lg:flex-row px-4 py-10 items-stretch  bg-pink-300'>
  <div class='w-full lg:w-1/2 flex flex-col items-center justify-center self-stretch'>
    <div>
      <h3 class='font-accent text-xl lg:text-4xl text-center lg:text-left mb-3'>
        {{ product.metafields.module.image_text_module_header.value | default: 'Gray Matters' }}
      </h3>
      <p class='font-accent text-sm lg:text-lg text-center lg:text-left mb-6 lg:mb-0'>
        {{ product.metafields.module.image_text_module_description.value | default: 'Gray Matters' }}
      </p>
    </div>
  </div>
  <div class='w-full lg:w-1/2'>
    {% assign module_image_val = product.metafields.module.image_text_module_image.value %}
    {% if module_image_val and module_image_val != blank %}
      <img
        class="w-full block"
        src="{{ module_image_val }}"
        alt="{{ product.metafields.module.image_text_module_header.value | default: 'Image' | escape }}"
        width="800"
        height="600"
        loading="lazy"
      >
    {% else %}
      <!-- Fallback o placeholder se il metafield Ã¨ vuoto -->
      <div class='w-full h-96 bg-gray-200 flex items-center justify-center'>
        <span class='text-gray-500 text-sm'>Aggiungi image_text_module_image metafield</span>
      </div>
    {% endif %}
  </div>
  </div>
</div>
